doctype html
html
    head
        title Create a New Post
        link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css')
        style.
            body {
                font-family: 'Comic Sans MS', cursive;
                background-color: #f4f4f4;
                margin: 0;
                padding: 0;
                display: flex;
                justify-content: center;
                align-items: center;
                height: 100vh;
            }
            .form-container {
                background-color: #fff;
                border-radius: 5px;
                box-shadow: 0px 0px 10px rgba(0,0,0,0.1);
                padding: 20px;
                max-width: 500px;
                width: 100%;
            }
            h1 {
                text-align: center;
                color: #333;
            }
            form {
                display: flex;
                flex-direction: column;
            }
            label {
                margin: 10px 0 5px 0;
                color: #666;
            }
            input, textarea {
                padding: 10px;
                border-radius: 5px;
                border: 1px solid #ccc;
            }
            button {
                margin-top: 20px;
                padding: 10px 20px;
                border: none;
                background-color: #007BFF;
                color: #fff;
                border-radius: 5px;
                cursor: pointer;
            }
    body
        include navbar
        .form-container
            h1 Create a New Post
            form(action='/add/new/' method='post')
                label(for='title') Post Title
                input#title(type='text' name='title' required)
                label(for='content') Post Content
                textarea#content(name='content' required)
                button(type='submit') Submit
